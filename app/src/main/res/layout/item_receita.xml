<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/borda_item">

    <TextView
        android:id="@+id/receita_fragment_txt_descricao"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Descrição"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/receita_fragment_btn_editar"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receita_fragment_txt_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="R$50.00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/receita_fragment_txt_descricao"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/receita_fragment_txt_descricao"
        app:layout_constraintTop_toBottomOf="@+id/receita_fragment_txt_descricao"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/receita_fragment_txt_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="07/02/2019"
        app:layout_constraintBottom_toBottomOf="@+id/receita_fragment_txt_valor"
        app:layout_constraintStart_toEndOf="@+id/receita_fragment_txt_valor"
        app:layout_constraintTop_toTopOf="@+id/receita_fragment_txt_valor" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/receita_fragment_btn_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintEnd_toStartOf="@+id/receita_fragment_btn_excluir"
        app:layout_constraintTop_toTopOf="@+id/receita_fragment_btn_excluir"
        app:srcCompat="@drawable/btn_editar" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/receita_fragment_btn_excluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_deletar" />

</android.support.constraint.ConstraintLayout>